<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:views="overwatch.views.*" creationComplete="onCreated()">

	<fx:Script><![CDATA[

		protected function onCreated():void
		{
			cCharacter1.imageUrl = "c:/Users/Administrator/Pictures/small/1.jpg";
			cHealthBar1.characterName = "stalker";
			cHealthBar1.updateHealth(100, 160);
			cCharacter2.imageUrl = "c:/Users/Administrator/Pictures/small/2.jpg";
			cHealthBar2.characterName = "roach";
			cHealthBar2.updateHealth(120, 120);
		}
		]]></fx:Script>

	<s:HGroup width="100%" height="100%" gap="10">
		<s:VGroup width="50%" height="100%" gap="10">
			<views:HealthBar id="cHealthBar1" width="100%"/>
			<s:Group width="100%" height="100%">
				<views:CharacterView id="cCharacter1" horizontalCenter="0" verticalCenter="0"/>
			</s:Group>
		</s:VGroup>
		<s:VGroup width="50%" height="100%" gap="10">
			<views:HealthBar id="cHealthBar2" width="100%"/>
			<s:Group width="100%" height="100%">
				<views:CharacterView id="cCharacter2" horizontalCenter="0" verticalCenter="0" mirror="true"/>
			</s:Group>
		</s:VGroup>
	</s:HGroup>

</s:Group>
