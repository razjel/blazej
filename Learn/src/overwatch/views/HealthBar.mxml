<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">
	<fx:Script><![CDATA[
		[Bindable]
		public var hero:HeroStats;

		override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number):void
		{
			super.updateDisplayList(unscaledWidth, unscaledHeight);
			var healthPercentagePosition:Number = hero.healthPoint/ hero.maxHealthPoint * unscaledWidth;
			cBar.graphics.clear();
			cBar.graphics.beginFill(0x22FF22);
			cBar.graphics.drawRect(0, 0, healthPercentagePosition, unscaledHeight);
			cBar.graphics.beginFill(0xFF2222);
			cBar.graphics.drawRect(healthPercentagePosition, 0, unscaledWidth - healthPercentagePosition, unscaledHeight);
		}
		]]></fx:Script>

	<s:VGroup>
		<s:Label id="cName" text="{hero.heroName}" />
		<s:Group id="cBar" width="100%" height="100%"/>
	</s:VGroup>
</s:Group>
